##############################################
# Example .env for production
##############################################

# Runtime
NODE_ENV=production
PORT=5002
SESSION_SECRET=GENERATE_RANDOM_32_CHARS_SECRET_HERE

# Database
POSTGRES_PASSWORD=GENERATE_STRONG_PASSWORD_HERE
DATABASE_URL=postgresql://photobooks:GENERATE_STRONG_PASSWORD_HERE@db:5432/photobooks_db

# Domains & CORS
DOMAIN=photobooksgallery.am
FRONTEND_URL=https://photobooksgallery.am
API_URL=https://photobooksgallery.am/api
ALLOWED_ORIGINS=https://photobooksgallery.am

# Uploads
UPLOAD_DIR=./uploads
UPLOAD_RETENTION_DAYS=30
UPLOAD_PREDELETE_NOTICE_HOURS=24
CLEAN_OLDER_THAN_DAYS=30

# Admin notifications (optional)
ADMIN_TELEGRAM_BOT_TOKEN=YOUR_ADMIN_BOT_TOKEN_HERE
ADMIN_TELEGRAM_CHAT_ID=YOUR_ADMIN_CHAT_ID_HERE

# Project nanny (UI) Telegram bot (separate from admin bot)
TELEGRAM_TOKEN=YOUR_NANNY_BOT_TOKEN_HERE
TELEGRAM_CHAT_ID=YOUR_NANNY_CHAT_ID_HERE

# AR microservice database (separate DB to isolate workload)
AR_POSTGRES_DB=ar_db
AR_POSTGRES_USER=photobooks
AR_POSTGRES_PASSWORD=GENERATE_DIFFERENT_STRONG_PASSWORD_HERE
AR_DATABASE_URL=postgresql://photobooks:GENERATE_DIFFERENT_STRONG_PASSWORD_HERE@ar-db:5432/ar_db

# Frontend build-time variables
VITE_API_URL=https://photobooksgallery.am

# Security notes:
# 1. NEVER commit real secrets. Keep only this example file tracked.
# 2. Generate strong random passwords (32+ chars): openssl rand -base64 32
# 3. Rotate any leaked tokens immediately (Telegram bot, DB passwords).
# 4. Use different passwords for main DB and AR DB.
# 5. After rotation, scrub Git history with `git filter-repo` to remove past leaks.
