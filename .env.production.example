# Production Environment Variables
# Скопируйте этот файл в backend/.env и заполните реальные значения

# Environment
NODE_ENV=production

# Server
PORT=5002

# Database
DATABASE_URL=postgresql://photobooks:CHANGE_THIS_PASSWORD@db:5432/photobooks
POSTGRES_PASSWORD=CHANGE_THIS_PASSWORD

# Domain and URLs
DOMAIN=photobooksgallery.am
FRONTEND_URL=https://photobooksgallery.am
API_URL=https://photobooksgallery.am/api

# Uploads
UPLOAD_DIR=./uploads
UPLOAD_RETENTION_DAYS=3
UPLOAD_PREDELETE_NOTICE_HOURS=6

# Security
ALLOWED_ORIGINS=https://photobooksgallery.am,https://www.photobooksgallery.am

# Storage: local filesystem only (no external object storage)

# Optional: Email alerts (для server-monitor.sh)
# ALERT_EMAIL=admin@photobooksgallery.am

# Optional: Telegram alerts
# TELEGRAM_BOT_TOKEN=your-bot-token
# TELEGRAM_CHAT_ID=your-chat-id
