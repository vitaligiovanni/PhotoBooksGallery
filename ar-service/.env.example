# AR Service Configuration

# Server
PORT=5000
NODE_ENV=development

# Database (AR-specific PostgreSQL)
AR_DATABASE_URL=postgresql://ar_user:ar_password@ar-db:5432/ar_projects

# Storage
AR_STORAGE_PATH=/app/storage/ar-storage
SHARED_UPLOADS_PATH=/app/storage/uploads

# Backend Integration (webhooks)
BACKEND_URL=http://backend:5002
BACKEND_WEBHOOK_SECRET=your-webhook-secret-here

# URLs for QR codes
TUNNEL_URL=https://your-ngrok-url.ngrok-free.dev
FRONTEND_URL=https://photobooksgallery.am

# Logging
LOG_LEVEL=info

# Queue (pg-boss)
QUEUE_ARCHIVE_COMPLETED_AFTER_SECONDS=3600
QUEUE_DELETE_AFTER_DAYS=7

# Demo cleanup (cron schedule)
DEMO_CLEANUP_SCHEDULE=0 */6 * * *  # Every 6 hours
DEMO_EXPIRATION_HOURS=24
