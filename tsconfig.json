{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"],
      "@backend/*": ["backend/src/*"],
      "@frontend/*": ["frontend/src/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "shared/**/*",
    "backend/**/*",
    "frontend/**/*"
  ]
}
